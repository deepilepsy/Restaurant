    <div class="row justify-content-center  ">
        <div class="col-md-12 " >
            <div class="card bg-light " style="--bs-bg-opacity: .8;">
                <div class="card-header">
                    <h1 class="text-center"><strong>Reserve Table</strong></h1>

                </div>
                <div class="card-body">
                    <form class="rounded-3 row  " action="/Home/Add" method="post">
                        <div class="col-6">
                            <div class="row g-3 mb-2">
                                <div class="col-4">
                                    <label for="name" class="form-label"><strong>Name</strong></label>
                                </div>
                                <div class="col-6">
                                    <input type="text" class="form-control" id="name" name="name" required>
                                </div>


                            </div>

                            <div class="row g-3 mb-2">
                                <div class="col-4">
                                    <label for="surname" class="form-label"><strong>Surname</strong></label>
                                </div>
                                <div class="col-6">
                                    <input type="text" class="form-control" id="surname" name="surname" required>
                                </div>


                            </div>

                            <div class="row g-3 mb-2">
                                <div class="col-4">
                                    <label for="email" class="form-label"><strong>E-mail</strong> </label>
                                </div>
                                <div class="col-6">
                                    <input type="email" class="form-control" id="email" name="email" required>
                                </div>


                            </div>

                            <div class="row g-3 mb-2">
                                <div class="col-4">
                                    <label for="phone" class="form-label"><strong>Phone</strong></label><br><br>
                                </div>
                                <div class="col-6">
                                    <input class="rounded form-control" type="tel" id="phone" name="phone" required>
                                </div>
                            </div>
                            <div class="row g-3 mb-2">
                                <div class="col-6">
                                    <label for="quantity" class="form-label"><strong>Number Of Guests</strong></label>
                                </div>
                                <div class="col-6 ">
                                    <input class="w-50 rounded form-control" type="number" value="1" id="quantity" name="quantity" min="1" max="80">
                                </div>


                            </div>
                        </div>
                        <div class="col-6">
                            <div class="row g-3 mb-2">
                                <div class="col-6">
                                    <label for="tableNo" class="form-label"><strong>Table No</strong></label>
                                </div>
                                <div class="col-6 ">
                                    <input class=" rounded form-control" type="number"
                                           value="@Model.tableNo"
                                           id="tableNo" name="tableNo" readonly>
                                </div>


                            </div>
                            <div class="row g-3 mb-2">
                                <div class="col-6">
                                    <label for="reservationDate" class="form-label"><strong>Date</strong></label>
                                </div>
                                <div class="col-6 ">
                                    <input class=" rounded form-control" type="date"
                                           value="@(Model.reservationDate != null ? Model.reservationDate.ToString("yyyy-MM-dd") : "")"
                                           id="reservationDate" name="reservationDate" readonly>
                                </div>


                            </div>

                            <div class="row g-3 mb-2">
                                <div class="col-6">
                                    <label for="reservationTime" class="form-label"><strong>Time</strong></label>
                                </div>
                                <div class="col-6 ">
                                    <input class=" rounded form-control" type="time"
                                           value="@Model.reservationTime"
                                           id="reservationTime" name="reservationTime" readonly>
                                </div>


                            </div>


