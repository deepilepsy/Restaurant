
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}


<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="width=device-width" />
<title>Reservation Form</title>
<link rel="stylesheet" href="stil.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">

<script src="https://cdn.tailwindcss.com"></script>


<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
</head>
<body class="" style="">

<div class="d-flex justify-content-center ">

    <form class="rounded-3 bg-light p-3 my-3" action="" method="" style="--bs-bg-opacity: .8;">
        
            
            <h1 class="display-6 my-3 text-center"><strong>Reserve Table</strong></h1>
       
        
        <div class="row g-3 mb-3">
            <div class="col-4">
                <label for="name" class="form-label"><strong>Name</strong></label>
            </div>
            <div class="col-6">
                <input type="text" class="form-control" id="name" name="name" required>
            </div>


        </div>

        <div class="row g-3 mb-3">
            <div class="col-4">
                <label for="surname" class="form-label"><strong>Surname</strong></label>
            </div>
            <div class="col-6">
                <input type="text" class="form-control" id="surname" name="surname" required>
            </div>


        </div>

        <div class="row g-3 mb-3">
            <div class="col-4">
                <label for="email" class="form-label"><strong>E-mail</strong> </label>
            </div>
            <div class="col-6">
                <input type="email" class="form-control" id="email" name="email" required>
            </div>


        </div>

        <div class="row g-3 mb-3">
            <div class="col-4">
                <label for="phone"><strong>Phone</strong></label><br><br>
            </div>
            <div class="col-6">
                <input class="rounded" type="tel" id="phone" name="phone" required>
            </div>



        </div>

        <div class="row g-3 mb-4">
            <div class="col-4">
                <label for="quantity"><strong>Number Of Guests</strong></label>
            </div>
            <div class="col-6 ">
                <input class="w-25 rounded" type="number" id="quantity" name="quantity">
            </div>


        </div>
        <div class="mb-4">
            <div>
                <h2 class="mb-2"><strong>Reservation</strong></h2>
                <div class="row gap-4">


                    <div class="col-md-auto">
                        <input id="datePicker" class=" border rounded"/>
                        <div id="flatpickr-calendar"></div>
                    </div>


                    <div class="col-md-auto">
                        <div class="d-flex gap-4">
                            <h2 id="selectedDateText"><strong>Select a Date On Picker</strong></h2>
                            <div class="flex gap-2">
                                @* <button></button>
                                
                                İCON WİLL BE ADDED!!!
                                
                                
                                <button></button> *@
                            </div>
                        </div>
                        <!-- HOVER MAY BE CREATED -->
                        <div class="row gap-4 mt-4">
                            <button class="col-md-5 text-light bg-success  rounded py-2 ">4:00 PM</button>
                            <button class="col-md-5 border text-light bg-success  rounded py-2 ">6:00 PM</button>
                        </div>
                        <div class="row gap-4 mt-4">
                            <button class="col-md-5 border text-light bg-success rounded py-2 ">8:00 PM</button>
                            <button class="col-md-5 border text-light bg-success rounded py-2 ">10:00 PM</button>
                        </div>



                    </div>

                </div>
            </div>
        </div>

        <div class="row g-3 mb-3">
            <div class="col-4">
                <label for="type"><strong>Reservation Type</strong></label>
            </div>
            <div class="col-6">
                <select id="type" name="type">
                    <option value="" selected="disabled">Please Select</option>
                    <option value="dinner">Dinner</option>
                    <option value="private1">Birthday/Anniversary</option>
                    <option value="nightlife">Nightlife</option>
                    <option value="private2">Private</option>
                    <option value="wedding">Wedding</option>
                    <option value="corporate">Corporate</option>
                    <option value="holiday">Holiday</option>
                    <option value="other">Other</option>
                </select>
            </div>


        </div>

        <div class="mb-3">

            <label for="Description" class="form-label"><strong>If Other above, please specify</strong></label>

            <textarea class="form-control" id="Description" name="Description" rows="3"></textarea>



        </div>
        <div class=" mb-3">

            <label for="requests" class="form-label"><strong>Any special requests</strong></label>

            <textarea class="form-control" id="requests" name="requests" rows="3"></textarea>



        </div>
        <button type="submit" class="btn btn-success w-100">Reserve</button>
    </form>
</div>
<script>
    
    flatpickr("#datePicker", {
        altInput: true,
        altFormat: "F j, Y",
        dateFormat: "Y-m-d",
        defaultDate: new Date(),
        onChange: function(selectedDates, dateStr, instance) {
            const options = { weekday: 'long', month: 'long', day: 'numeric' };
            const formatted = selectedDates[0].toLocaleDateString('en-US', options);
            document.getElementById('selectedDateText').innerHTML = "<strong>"+formatted+"</strong>";
        }
    });
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO" crossorigin="anonymous"></script>
</body>
</html>
