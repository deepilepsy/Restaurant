@model Restaurant.Models.AdminPanelView
@{
    ViewData["Title"] = "Staff";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Staff Page</title>
    <link rel="stylesheet" href="~/css/tables.css?v=1.0.2" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/staffpage.css"></link>
    <style>
        .btn-order {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            color: white;
            border: none;
            padding: 8px 12px;
            border-radius: 6px;
            text-decoration: none;
            display: inline-block;
            font-size: 0.85rem;
            font-weight: 500;
            transition: all 0.3s ease;
            margin: 2px;
        }
        
        .btn-order:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(40, 167, 69, 0.4);
            color: white;
            text-decoration: none;
        }
    </style>
</head>
<body>
<div>
    <a asp-controller="Home" asp-action="Index">
        <img src="~/images/home.png" alt="home" id="homebutton" />
    </a>
</div>

<!-- Success/Error Messages -->
<div class="message-container">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            <strong>Success!</strong> @TempData["Success"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            <strong>Error!</strong> @TempData["Error"]
        </div>
    }
</div>
<h1 class="page-title">Staff Panel</h1>
<div class="stat-card">
    <div class="stat-number">@Model.UpcomingReceipts.Count()</div>
    <div class="stat-label">Active Reservations</div>
</div>

<h2 class="page-title">Upcoming Reservations</h2>
<section class="wrapper">
    <!-- Title Row -->
    <main class="row title">
        <ul>
            <li>Name</li>
            <li>Phone</li>
            <li>Guests</li>
            <li>Served By</li>
            <li>Table</li>
            <li>Date</li>
            <li>Time</li>
            <li>Actions</li>
        </ul>
    </main>
    <!-- Data Rows -->
    @if (Model.UpcomingReceipts != null && Model.UpcomingReceipts.Any())
    {
        @foreach (var receipt in Model.UpcomingReceipts)
        {
            <section class="row-fadeIn-wrapper">
                <article class="row fadeIn reservation-row" id="reservation-@receipt.ReservationId">
                    <ul>
                        <li data-label="Name">
                            @if (receipt.Customer != null)
                            {
                                @($"{receipt.Customer.Name} {receipt.Customer.Surname}")
                            }
                            else
                            {
                                <span class="text-muted">No customer data</span>
                            }
                        </li>
                        <li data-label="Phone">
                            @if (receipt.Customer != null)
                            {
                                @receipt.Customer.TelNo
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </li>
                        <li data-label="Guests">@receipt.GuestNumber</li>
                        <li data-label="Served By">@receipt.ServedBy?.Name @receipt.ServedBy?.Surname</li>
                        <li data-label="Table">@receipt.Table?.TableId</li>
                        <li data-label="Date">@receipt.ReservationDate.ToShortDateString()</li>
                        <li data-label="Time">@receipt.ReservationHour</li>
                        <li data-label="Actions">
                            <div class="action-buttons">
                                <button type="button" class="btn-action btn-checkin"
                                        onclick="updateReservationStatus(@receipt.ReservationId, 'checked-in')">
                                    Check-in
                                </button>
                                <button type="button" class="btn-action btn-cancel"
                                        onclick="updateReservationStatus(@receipt.ReservationId, 'cancelled')">
                                    Cancel
                                </button>
                                <a href="@Url.Action("Edit", new { id = receipt.ReservationId })"
                                   class="btn-action btn-edit">
                                    Edit
                                </a>
                                <a href="@Url.Action("OrderManagement", "Home", new { reservationId = receipt.ReservationId })"
                                   class="btn-order">
                                    <i class="fas fa-utensils"></i> Order
                                </a>
                            </div>
                        </li>
                    </ul>
                </article>
            </section>
        }
    }
    else
    {
        <section class="row-fadeIn-wrapper">
            <article class="row fadeIn">
                <div style="text-align: center; padding: 40px; font-size: 1.2rem; opacity: 0.8;">
                    <i class="fas fa-calendar-check" style="font-size: 3rem; margin-bottom: 20px; display: block;"></i>
                    No active reservations found.
                </div>
            </article>
        </section>
    }
</section>

<script src="~/js/staff.js">

</script>
</body>
</html>