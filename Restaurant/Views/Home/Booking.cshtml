@{
    ViewData["Title"] = "Booking";
}

<!DOCTYPE html>

<html>
<head>
    <title>Booking</title>
<style>
    .select {
        color:white;
        font-size: 18px;
        text-align: center;
        margin-bottom: 20px;
    }

    .container {
        width: 80vw;
        padding: 20px;
        border-radius: 15px;
        display: flex;
        flex-direction: column;
        backdrop-filter: blur(5px);
        background-color: rgba(0, 0, 0, 0.5);
        text-align: center;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.6);
        padding-left: 100px;
        padding-right: 100px;
    }

    .tables {
        background-color: white;
        border-color: white;
        border-width: 1px;
        border-style: solid;
        border-radius: 35px;
        width: 70px;
        height: 70px;
        font-weight: bold;
        cursor: pointer;
        transition: transform 0.3s;
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 15px;
    }

    .tables:hover {
        transform: scale(1.1);
        box-shadow: 0 0 15px rgba(242, 230, 209, 0.6);
    }

    .tables.selected {
        background-color: green;
        color: white;
        box-shadow: 0 0 15px #28a745;
        border-color: #135122;
    }

    .tables.occupied {
        background-color: #b00000;
        color: rgb(193, 192, 192);
        border-color: #b00000;
        cursor: not-allowed;
        opacity: 0.7;
    }

    #table-wrapper {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(80px, 1fr));
        gap: 20px;
        justify-items: center;
        padding: 25px;
    }

    .date-time-picker {
        margin-bottom: 20px ;
        margin-top: 10px;
        display: flex;
        justify-content: center;
        gap: 40px;
        color:white;
        font-weight: 500;
        font-size: 18px;
    }

    .date-time-picker input[type="date"],
    .date-time-picker input[type="time"] {
        padding: 6px 10px;
        border-radius: 6px;
        border: none;
        font-size: 16px;
        background-color:white;
        color: #333;
        cursor: pointer;
    }

        </style>
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
</head>
<body>
<div class="container">
    <div class="date-time-picker">
        <label for="reservation-date">Date:</label>
        <input type="date" id="reservation-date" name="reservation-date" />

        <label for="reservation-time">Time:</label>
        <input type="time" id="reservation-time" name="reservation-time" />
    </div>

    <div class="select">Select a table</div>
    <div id="table-wrapper"></div>
</div>

<script>
        const wrapper = document.getElementById('table-wrapper');
        const occupiedTables = [3, 7, 12]; // görelim diye şimdilik ekledim 

        for (let i = 1; i <= 20; i++) {
            const tableButtons = document.createElement('button');
            tableButtons.classList.add('tables');
            tableButtons.innerText = i;

            if (occupiedTables.includes(i)) {
                tableButtons.classList.add('occupied');
            } else {
                tableButtons.addEventListener('click', () => {
                    tableButtons.classList.toggle('selected');
                });

            }
            wrapper.appendChild(tableButtons);
        }
    </script>
</body>
</html>
